# Application
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sitetracker_spark?schema=public"

# JWT
JWT_SECRET=your-super-secret-key
JWT_EXPIRES_IN=1d

# Redis (Local)
REDIS_HOST=localhost
REDIS_PORT=6379

# Redis (Heroku)
REDIS_URL=redis://default:password@host:port
REDIS_PASSWORD=your-redis-password

# Rate Limiting
RATE_LIMIT=100
CACHE_TTL=60000

# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_REDIRECT_URI=http://localhost:3000/api/salesforce/oauth/callback

# For Production
# SALESFORCE_REDIRECT_URI=https://your-heroku-app.herokuapp.com/api/salesforce/oauth/callback 